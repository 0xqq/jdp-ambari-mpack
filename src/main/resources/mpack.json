{
  "type" : "full-release",
  "name" : "jdp-ambari-mpack",
  "version": "${project.version}",
  "hash": "${buildNumber}",
  "branch": "${scmBranch}",
  "description" : "JDP Ambari Management Pack",
  "prerequisites": {
    "min-ambari-version" : "${minAmbariVersion}",
    "max-ambari-version" : "${maxAmbariVersion}"
  },
  "artifacts": [
    {
      "name" : "jdp-service-definitions",
      "type" : "service-definitions",
      "source_dir": "common-services"
    },
    {
      "name" : "jdp-stack-definitions",
      "type" : "stack-definitions",
      "source_dir": "stacks"
    },
    {
      "name" : "hdp-addon-services",
      "type" : "stack-addon-service-definitions",
      "source_dir": "hdp-addon-services",
      "service_versions_map": [
        {
          "service_name" : "NIFI",
          "service_version" : "1.7.0",
          "applicable_stacks" : [
            {
              "stack_name" : "HDP",
              "stack_version" : "2.6"
            }
          ]
        },
        {
          "service_name" : "REGISTRY",
          "service_version" : "0.3.0",
          "applicable_stacks" : [
            {
              "stack_name" : "HDP",
              "stack_version" : "2.6"
            }
          ]
        },
        {
          "service_name" : "STREAMLINE",
          "service_version" : "0.5.0",
          "applicable_stacks" : [
            {
              "stack_name" : "HDP",
              "stack_version" : "2.6"
            }
          ]
        }
      ]
    }
  ]
}

